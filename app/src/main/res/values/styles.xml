<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/general_sans_medium</item>
        <item name="android:textColor">@drawable/selector_hint_color</item>
    </style>

    <style name="Shapeable_Image_View_Corner_Size_6">
        <item name="cornerSize">@dimen/dp6</item>
    </style>

    <style name="Shapeable_Image_View_Corner_Size_60">
        <item name="cornerSize">@dimen/dp60</item>

    </style>

    <style name="text_in_layout_hint_Style">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomDropDownStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/ic_scroll_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/ic_scroll_track</item>
        <item name="android:paddingTop">@dimen/dp4</item>
        <item name="android:paddingEnd">@dimen/dp3</item>
        <item name="android:paddingBottom">@dimen/dp4</item>
        <item name="android:clipToPadding">false</item>

    </style>


    <!--<style name="Theme.App" parent="Theme.Material3.*">
        ...
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>
    </style>-->

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurfaceVariant">@color/color_F5F5F6</item>
    </style>

    <style name="AppBottomSheetDialogThemeTransparent" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MaterialDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>


</resources>